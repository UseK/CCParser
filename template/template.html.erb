<html>
	<head>heatmap</head>
	<body>
		<table border=3 bgcolor="#000000" cellspacing=3 cellpadding=0>
			<tr>
				<td>
					<table border=3 cellspacing=1 cellpadding=3>
						<tr bgcolor="#FFFFFF">
							<td></td>
							<% @package_list.each_value do |package_path| %>
                <td Valign="top"><%= package_path.gsub(//) {|matched| matched + "</br>"} %></td>
							<% end %>
						</tr>
						<% @table.each_with_index do |row, idx_row| %>
							<tr bgcolor="#FFFFFF">
								<td><%= @package_list[idx_row.to_s] %></td>
                <% row.each_with_index do |cell, idx_colmn| %>
                  <% if cell.rate != 0.0 %>
                    <td bgcolor=<%= cell.bgcolor %> title="<%= @package_list[idx_colmn.to_s] %> &#13;&#10; to &#13;&#10;<%= @package_list[idx_row.to_s]%>&#13;&#10;<%= cell.data %>"><%= cell.rate %></td>
                  <% else %>
                    <td></td>
                  <% end %>
                <% end %>
							</tr>
						<% end %>
					</table>
				</td>
			</tr>
		</table>
	</body>
</html>
